@model IEnumerable<PhotocopyRevaluationApp.Models.EventRevaluationCountDTO>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["X_Axis"] = "EventName";
}

@await Html.PartialAsync("_TableData")

<table border="1" align="center" id="myDataTable" class="display">
        <tr>
        <th><b>Sno</b></th>
            <th><b>Event</b></th>
            <th><b>Revaluation Count</b></th>
        </tr>
        @{
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.Event</td>
                <td><a href="@Url.Action("_List", new { ColumnName = "EventName", Value = @item.Event})">@item.RevaluationCount</a></td>
                </tr>
                i++;
            }
        }
    </table>
