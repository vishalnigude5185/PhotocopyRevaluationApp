	<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

		<!-- Define the log level and targets -->
		<targets>
			<target name="logfile" xsi:type="File" fileName="logs/logfile.txt" layout="${longdate} ${uppercase:${level}} ${message} ${exception}" />
			<target name="logconsole" xsi:type="Console" layout="${longdate} ${uppercase:${level}} ${message} ${exception}" />
		</targets>

		<rules>
			<!-- Log all messages to both file and console -->
			<logger name="*" minlevel="Info" writeTo="logfile,logconsole" />
		</rules>

	</nlog>
</configuration>

