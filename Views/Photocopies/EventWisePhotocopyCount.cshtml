@model IEnumerable<EventPhotocopyCountDTO>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    TempData["X_Axis"] = "Event";
}

@await Html.PartialAsync("_TableData")

<h4>Event Wise Photocopy Count</h4>
<table border="1" align="center" id="myDataTable" class="display">
    <tr>
        <th><b>Sno</b></th>
        <th><b>Event</b></th>
        <th><b>Photocopy Count</b></th>
    </tr>
    @{
        int i = 1;
        foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.Event</td>
                <td><a href="@Url.Action("_List", new { ColumnName = "EventName", Value = @item.Event})">@item.PhotocopyCount</a></td>
            </tr>
            i++;
        }
    }
</table>
